<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout 
        android:id="@+id/main_liner_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/app_default_bg_f5">
            
        <include layout="@layout/actionbar_home" />
        <FrameLayout
            android:id="@+id/fl_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/tv_blue"/>
        
        <com.zeroapp.action.view.carousel.CarouselView
            android:id="@+id/carousel"
            android:gravity="bottom"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            />
    
    </LinearLayout>
    <FrameLayout
        android:id="@+id/topfl_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:alpha="0.5"
        />
</FrameLayout>
